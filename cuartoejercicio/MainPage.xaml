<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cuartoejercicio.MainPage">

    <ScrollView>

        <VerticalStackLayout Margin="20,35,20,20">

            <Image Source="numerosal.png" WidthRequest="300"/>
            
            <Entry x:Name="num1" Placeholder="Ingrese numero1"
                   Keyboard="Numeric"/>

            <Entry x:Name="Respuesta1" Placeholder="al cuadrado"
                   Keyboard="Numeric"/>

                <Entry x:Name="Respuesta2" Placeholder="al cubo"
                   Keyboard="Numeric"/>

                <Button Text="al cuadrado"
                    Clicked="Button_Clicked"/>

            <Button Text="al cubo"
                    Clicked="Button_Clicked_1"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
